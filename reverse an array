#include<bits/stdc++.h>
using namespace std;

void reverse(int arr[],int n){
    int start = 0;
    int end = n-1;
    while(start<=end){
        swap(arr[start],arr[end]);
        start++;
        end--;

    }
    
}

void print(int arr[],int n){
    for (int i = 0; i < 5; i++)
    {
        cout<<arr[i]<<" ";
   }
    
}

int main(){

    int arr[5]={1,2,4,5,3};
    cout<<"array before reverse : "<<endl;
    print(arr,5);
    cout<<endl<<"array after reverse : "<<endl;
    reverse(arr,5);
    print(arr,5);

    



return 0;
}
